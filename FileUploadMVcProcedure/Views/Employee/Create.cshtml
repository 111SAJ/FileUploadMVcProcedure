@model FileUploadMVcProcedure.Context.Employee
@{
    ViewBag.Title = "Employee Create";
}

<h2 class="text-center mb-4 mt-2">Employee Create</h2>

<div class="container">
    <div class="card shadow">
        <div class="card-body">
            @using (Html.BeginForm("Create", "Employee", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                <div class="form-group">
                    <label>Name</label>
                    @Html.ValidationMessageFor(x => x.EmployeeName, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.EmployeeName, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.ValidationMessageFor(x => x.EmployeeEmail, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.EmployeeEmail, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Password</label>
                    @Html.ValidationMessageFor(x => x.Password, "", new { @class = "text-danger" })
                    @Html.TextBoxFor(x => x.Password, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Address</label>
                    @Html.ValidationMessageFor(x => x.Address, "", new { @class = "text-danger", @rows = "10" })
                    @Html.TextAreaFor(x => x.Address, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Profile</label>
                    @Html.ValidationMessageFor(x => x.Profile, "", new { @class = "text-danger" })
                    <input type="file" name="file" class="form-control" />
                </div>
                <button class="btn btn-sm btn-success" type="submit">Submit</button>
            }
        </div>
    </div>
</div>

